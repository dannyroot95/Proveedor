<?xml version="1.0" encoding="utf-8"?>
<!--  cambiamos a tipo layer-list
  - creamos un item de tipo drawable , antes previamente importado nuestra imagen desde image asset
  -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/pink"></item> <!-- creamos un xml con un fondo blanco -->
    <item>
        <bitmap android:src="@drawable/splash"
            android:gravity="center"
            />  <!-- hacemos el llamado al recurso que hemos creado (imagen) y lo centramos -->
    </item>
</layer-list>